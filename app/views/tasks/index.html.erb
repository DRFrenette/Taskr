<h1> Here are your tasks, <%= current_user.email %> </h1>

<div id="errors"></div>

<%= render "error_messages", target: @task %>
<%= form_for @task do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <%= form.submit %>
<% end %>

<h3 id="incomplete-header" data-list-id="incompleted_tasks_list"> 
These are the tasks that you've yet to complete: </h3>
<ul id="incompleted_tasks_list"><%= render @incomplete_tasks %></ul>

<h3 id="complete-header" data-list-id="completed_tasks_list">
These are the tasks that you've completed! Woo! </h3>
<ul id="completed_tasks_list"><%= render @complete_tasks %></ul>

