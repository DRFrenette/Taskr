body {
  background-image: "<%= image_path("chalkboard.jpg") %>";
  background-size: 100%;
}

.sign-in {
  float: right;
}

.task-form {
  @include outer-container;
  @include position(relative, 3em null null 3em);
}

#incomplete-header {
  margin: 5px;
}

.i-tasks-list {
  @include outer-container;
  float: left;
  padding: 8em;
}

.c-tasks-list {
  @include outer-container;
  float: right;
  padding: 8em;
}

.created-by {
  @include clearfix;
  @include position(relative, null 10px 5px null);
  text-align: right;
}
